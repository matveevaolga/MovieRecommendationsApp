<?xml version="1.0" encoding="UTF-8"?>
<Application x:Class="MovieRecommendationsApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MovieRecommendationsApp"
             xmlns:materialDesign="https://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MVVM/View/Authorization.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DropShadowEffect x:Key="Shadow" BlurRadius="25"/>
            <Style TargetType="Button" x:Key="ButtonStyle" 
                 BasedOn="{StaticResource MaterialDesignFlatButton}">
                <Setter Property="Background" Value="#FF5E4092"></Setter>
                <Setter Property="BorderBrush" Value="#FF5E4092"></Setter>
                <Setter Property="Foreground" Value="#efe5fd"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="MinHeight" Value="40"></Setter>
                <Setter Property="Effect"
                        Value="{StaticResource MaterialDesignElevationShadow3}"/>
            </Style>
            <Style TargetType="TextBox" x:Key="TextBoxWithHint"
                   BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                <Setter Property="Foreground" Value="#efe5fd"></Setter>
                <Setter Property="FontSize" Value="25"></Setter>
            </Style>
            <Style TargetType="Label" x:Key="TitleLabel" 
                   BasedOn="{StaticResource MaterialDesignLabel}">
                <Setter Property="FontSize" Value="50"></Setter>
                <Setter Property="Foreground" Value="#FFD47919"></Setter>
            </Style>
            <Style TargetType="Border" x:Key="MainBorder"
                   BasedOn="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}">
                <Setter Property="Background" Value="#FF3C3046"></Setter>
                <Setter Property="Margin" Value="50"></Setter>
                <Setter Property="MaxHeight" Value="900"></Setter>
                <Setter Property="MaxWidth" Value="1500"></Setter>
                <Setter Property="Effect" Value="{StaticResource Shadow}"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
